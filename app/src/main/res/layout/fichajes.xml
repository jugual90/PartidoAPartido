<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#f2eb9d"
         >

         <ImageView
             android:id="@+id/ivEscudo"
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:src="@drawable/ic_netherlands"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreEquipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:textSize="25dp"
                android:text="Real Madrid"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="6dp"
                    android:textSize="18dp"
                    android:text="Millones/â‚¬ invertidos"/>

                <TextView
                    android:id="@+id/tvPrecioTraspaso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#c09"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="6dp"
                    android:text="29"/>


            </LinearLayout>


        </LinearLayout>


     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvLlegadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/altaFichaje"
            android:textStyle="bold"
            android:textSize="19dp"
            android:text="LLegadas"/>

        <TextView
            android:id="@+id/tvNombreSalidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/bajaFichaje"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="19dp"
            android:text="Salidas"/>

        <TextView
            android:id="@+id/tvNombreRumores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/rumorFichaje"
            android:layout_marginLeft="6dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="19dp"
            android:text="Rumores"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/tvNomJugador1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="19dp"
            android:text="Lucas"/>
        <TextView
            android:id="@+id/tvNomJugador2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="19dp"
            android:text="Javi"/>

        <TextView
            android:id="@+id/tvNomJugador3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="19dp"
            android:text="Rumores"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivLlegadas"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_netherlands"/>

        <ImageView
            android:id="@+id/ivSalidas"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_netherlands"/>

        <ImageView
            android:id="@+id/ivRumores"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_netherlands"/>

    </LinearLayout>




</LinearLayout>